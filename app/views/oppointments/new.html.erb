<h2>Oppointment New Patient</h2>
<%= form_with(model: @oppointment, local: true) do |form| %>
  <div class = "form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div class = "form-group">
    <%= form.label :age %><br>
    <%= form.text_field :age %>
  </div>
  <div class = "form-group">
    <%= form.label :time%><br>
    <%= form.text_field :time %>
  </div>
  <div class = "form-group">
    <%= form.label :consultation_problem %><br>
    <%= form.text_field :consultation_problem %>
  </div>
  <div class = "form-group">
    <%= form.label :date %><br>
    <%= form.number_field :date %>
  </div>
  <%= form.submit "Oppoinment Patient" %>
  </div>
<% end %>