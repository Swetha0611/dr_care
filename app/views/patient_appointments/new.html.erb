<h2>New Patient Appointment</h2>
<%= form_with model: @patient_appointment, local: true do |form| %>
  <div class = "form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div class = "form-group">
    <%= form.label :age %><br>
    <%= form.text_field :age %>
  </div>
  <div class = "form-group">
    <%= form.label :Time%><br>
    <%= form.text_field :Time %>
  </div>
  <div class = "form-group">
    <%= form.label :consulting_problem %><br>
    <%= form.text_field :consulting_problem %>
  </div>
  <div class = "form-group">
    <%= form.label :date %><br>
    <%= form.number_field :date %>
  </div>
  <%= form.submit "Appointment register" %>
  </div>
<% end %>