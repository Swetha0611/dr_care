<h2>Register New Patient</h2>
<%= form_with(model: @patient, local: true) do |form| %>
  <div class = "form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div class = "form-group">
    <%= form.label :patient_number %><br>
    <%= form.text_field :patient_number %>
  </div>
  <div class = "form-group">
    <%= form.label :consultation_problem %><br>
    <%= form.text_field :consultation_problem %>
  </div>
  <div class = "form-group">
    <%= form.label :consulting_fees %><br>
    <%= form.number_field :consulting_fees, step: 0.01 %>
  </div>
  <%= form.submit "Register Patient" %>
  </div>
<% end %>