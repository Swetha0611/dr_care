<h2>Edit Patient</h2>

<%= form_with model: @patient, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :patient_number %>
    <%= form.text_field :patient_number %>
  </div>
  <div>
    <%= form.label :consultation_problem %>
    <%= form.text_field :consultation_problem %>
  </div>
   <div>
    <%= form.label :consulting_fees %>
    <%= form.text_field :consulting_fees %>
  </div>
  <div>
    <%= form.submit "Update Patient sucessfully", class: "btn btn-success" %>
  </div>
<% end %>